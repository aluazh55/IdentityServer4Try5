@model IdentityServer4Try5.Controllers.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>
<form asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-error-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-error-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="btn btn-secondary">Register</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}